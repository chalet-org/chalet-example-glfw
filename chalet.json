{
	"name": "chalet-example-glfw",
	"version": "1.0.0",
	"externalDependencies": {
		"glfw": {
			"repository": "git@github.com:glfw/glfw.git",
			"tag": "3.3.7"
		},
		"glm": {
			"repository": "git@github.com:g-truc/glm.git",
			"tag": "0.9.9.8"
		}
	},
	"targets": {
		"glm": {
			"kind": "cmakeProject",
			"location": "${externalDir}/glm",
			"targets": "glm/all",
			"defines": [
				"BUILD_STATIC_LIBS=ON",
				"BUILD_SHARED_LIBS=ON"
			],
			"recheck": false
		},
		"glfw": {
			"kind": "cmakeProject",
			"location": "${externalDir}/glfw",
			"targets": "glfw",
			"recheck": false
		},
		"glfw-app": {
			"kind": "executable",
			"language": "C++",
			"settings:Cxx": {
				"cppStandard": "c++17",
				"warningsPreset": "pedantic",
				"precompiledHeader": "src/pch.hpp",
				"includeDirs": [
					"src",
					"${externalDir}/glm"
				],
				"libDirs": [
					"${externalBuildDir}/glm/glm"
				],
				"staticLinks": [
					"glm_static"
				]
			},
			"files": "src/**.cpp"
		}
	},
	"distribution": {
		"all": {
			"kind": "bundle",
			"buildTargets": "*"
		}
	}
}
